using System.Diagnostics;
using System.Runtime.InteropServices;

var builder = WebApplication.CreateBuilder(args);

// Add services to the container.
builder.Services.AddControllers();
// Learn more about configuring OpenAPI at https://aka.ms/aspnet/openapi
builder.Services.AddOpenApi();
builder.Services.AddSwaggerGen();

var app = builder.Build();

// Configure the HTTP request pipeline.
if (app.Environment.IsDevelopment())
{
    app.MapOpenApi();
    app.UseSwagger();
    app.UseSwaggerUI();
}

// הסרת הכפיית HTTPS לפיתוח מקומי
// app.UseHttpsRedirection();

app.UseAuthorization();

app.MapControllers();

// הוספת נקודת קצה פשוטה לבדיקה
app.MapGet("/", () => "השרת רץ בהצלחה! 🎉 נסה /weatherforecast או /swagger");

Console.WriteLine("השרת רץ על: http://localhost:5045");
Console.WriteLine("בדוק את:");
Console.WriteLine("  - http://localhost:5045/weatherforecast");
Console.WriteLine("  - http://localhost:5045/swagger");

// פתיחת דפדפן אוטומטית
var url = "http://localhost:5045";
Task.Run(async () =>
{
    await Task.Delay(2000); // המתנה קצרה שהשרת יתחיל
    try
    {
        if (RuntimeInformation.IsOSPlatform(OSPlatform.Windows))
        {
            Process.Start(new ProcessStartInfo(url) { UseShellExecute = true });
        }
        else if (RuntimeInformation.IsOSPlatform(OSPlatform.MacOS))
        {
            Process.Start("open", url);
        }
        else if (RuntimeInformation.IsOSPlatform(OSPlatform.Linux))
        {
            Process.Start("xdg-open", url);
        }
        Console.WriteLine($"פתיחת דפדפן: {url}");
    }
    catch (Exception ex)
    {
        Console.WriteLine($"לא הצלחתי לפתוח דפדפן אוטומטית: {ex.Message}");
        Console.WriteLine($"פתח ידנית את: {url}");
    }
});

app.Run();
